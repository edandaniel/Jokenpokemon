<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GameActivity">

    <ImageView
        android:id="@+id/waterIV"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/p1_squirtle"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="212dp" />

    <ImageView
        android:id="@+id/fireIV"
        android:layout_width="100dp"
        android:layout_height="87dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/p1_squirtle"
        app:layout_constraintEnd_toStartOf="@+id/grassIV"
        app:layout_constraintStart_toEndOf="@+id/waterIV"
        tools:layout_editor_absoluteY="212dp"
        tools:src="@drawable/p1_charmander" />

    <ImageView
        android:id="@+id/grassIV"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/p1_squirtle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="208dp"
        tools:src="@drawable/bulbassalto" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fireIV" />
</android.support.constraint.ConstraintLayout>